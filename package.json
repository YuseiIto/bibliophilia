{
	"name": "bibliophilia",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"deploy": "wrangler pages deploy ./build/client",
		"dev": "react-router dev",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"format": "biome format --write",
		"format:ci": "biome ci",
		"start": "wrangler pages dev ./build/client",
		"typecheck": "react-router typegen && tsc",
		"typegen": "wrangler types && react-router typegen",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"test": "vitest run",
		"db:generate": "drizzle-kit generate",
		"db:apply": "wrangler d1 migrations apply bibliophilia-db",
		"db:apply:prod": "wrangler d1 migrations apply bibliophilia-db --remote",
		"db:studio:prod": "drizzle-kit studio",
		"db:studio": "LOCAL_DB_URL=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio"
	},
	"dependencies": {
		"@eslint/compat": "^2.0.0",
		"@mynaui/icons-react": "^0.4.0",
		"@prisma/client": "^7.0.0",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-context-menu": "^2.2.16",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-popover": "^1.1.15",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tabs": "^1.1.13",
		"@radix-ui/react-toast": "^1.2.15",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@react-router/cloudflare": "^7.0.0",
		"@react-router/fs-routes": "^7.9.4",
		"@tailwindcss/postcss": "^4.1.14",
		"bcp-47-normalize": "^2.3.0",
		"better-sqlite3": "^12.0.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.0",
		"fast-xml-parser": "^5.3.0",
		"globals": "^17.0.0",
		"isbot": "^5.1.31",
		"lucide-react": "^0.562.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-resizable-panels": "^3.0.6",
		"react-router": "^7.0.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.14",
		"tailwindcss-animate": "^1.0.7",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@chromatic-com/storybook": "^5.0.0",
		"@cloudflare/workers-types": "^4.20251011.0",
		"@react-router/dev": "^7.0.0",
		"@storybook/addon-docs": "^10.0.0",
		"@storybook/addon-onboarding": "^10.0.0",
		"@storybook/react-vite": "^10.0.0",
		"@types/node": "^24.9.1",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"@typescript-eslint/eslint-plugin": "^8.46.0",
		"@typescript-eslint/parser": "^8.46.0",
		"autoprefixer": "^10.4.21",
		"drizzle-kit": "^0.31.5",
		"eslint": "^9.37.0",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.0",
		"eslint-plugin-storybook": "^10.0.0",
		"postcss": "^8.5.6",
		"storybook": "^10.0.0",
		"typescript": "^5.1.6",
		"vite": "^7.0.0",
		"vite-tsconfig-paths": "^6.0.0",
		"vitest": "^4.0.0",
		"wrangler": "^4.0.0"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
